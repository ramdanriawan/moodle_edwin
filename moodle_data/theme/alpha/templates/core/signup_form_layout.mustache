                    {{/loginlogooutside}}

                    {{#signupintrotext}}
                        <div class="rui-loginpage-intro-content">
                            {{{signupintrotext}}}
                        </div>
                    {{/signupintrotext}}
                    {{^loginlayoutimg}}
                        {{#signuptext}}
                        <div class="{{#signupintrotext}}mt-3{{/signupintrotext}}">
                            {{{signuptext}}}
